@using MVCWeb.Model.Models;
@{
    ViewBag.Title = "编辑简历";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    Resume Resume = ViewBag.Resume;
}
@section head{
    <!--fileupload-->
    <script src="~/Scripts/FileUpload/vendor/jquery.ui.widget.js"></script>
    <script src="~/Scripts/FileUpload/jquery.iframe-transport.js"></script>
    <script src="~/Scripts/FileUpload/jquery.fileupload.js"></script>
    <!--highlight.js-->
    <link href="~/Scripts/HighlightJs/default.min.css" rel="stylesheet" />
    <script src="~/Scripts/HighlightJs/highlight.min.js"></script>
    <!--marked-->
    <script src="~/Scripts/Marked/marked.js"></script>
    <!--Page-->
    <script src="~/Scripts/Views/ResumeEdit.js"></script>
}
<div style="width: 800px; padding: 20px; margin: 0px auto">
    <div class="row" style="padding-top: 15px">
        <div id="MDValue" class="col-md-12 mdv">
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <span>查看&nbsp;<a href="http://mvc.objnull.com/zh/Demo/MarkDownSyntax" target="_blank">MarkDown语法</a>&nbsp;,&nbsp;</span>
            <input id="JqueryUpload" class="uploader" type="file" name="upFile" data-url="@Url.Action("JqueryUploadImg", "File", new { pt = (int)EnumObjectType.博客 })" style="display:none">
            <span>拖拽或<a id="TxtChoseFile" href="javascript:;">选择图片</a>上传（chrome内核支持截图粘贴）&nbsp;&nbsp;</span>
            <span id="UpPercent" style="color:#ff6a00"></span>
        </div>
    </div>
    <input id="ValPt" type="hidden" value="@((int)EnumObjectType.博客)" />
    <div class="row">
        <div class="col-md-12">
            <textarea id="TxtMD" class="form-control" rows="15" style="resize:vertical;">@(Resume == null ? "" : Resume.MD)</textarea>
        </div>
    </div>
    <div class="row" style="margin-top: 20px; line-height: 34px">
        <div class="col-md-3 text-left">
            @{ 
                string pub = "", pri = "checked";
                if(Resume != null)
                {
                    pub = Resume.Public ? "checked=\"checked\"" : "";
                    pri = Resume.Public ? "" : "checked=\"checked\"";
                }
            }
            <input type="radio" name="ispub" @pub value="1" />公开 &nbsp;&nbsp;
            <input type="radio" name="ispub" @pri value="0" />不公开
        </div>
        <div class="col-md-9 text-right">
            <button id="BtnConfirm" class="btn btn-default">保存</button>
        </div>
    </div>
</div>

